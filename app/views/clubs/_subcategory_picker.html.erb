
<%= simple_form_for :subcategories, url: update_subcategories_path, method: :get, html: { id: 'subcategories_form' } do |f| %>
  <%= f.input :subcategories,
    collection: @subcategories_counts.map { |subcategory, count| ["#{subcategory} (#{count})", subcategory] },
    selected: session[:subcategories],
    label: false,
    input_html: {
      class: ' w-100 overflow-hidden bg-white-light shadow-sm',
      style: 'border-radius: 6px;',
      onchange: 'this.form.submit()'
    }
  %>
<% end %>

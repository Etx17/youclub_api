<%= simple_form_for :subcategory, url: update_subcategory_path, method: :get, html: { id: 'subcategory_form' } do |f| %>
  <%= f.input :subcategory,
    collection: mapped_subcategories(session[:category]),
    selected: session[:subcategory],
    label: false,
    input_html: {
      class: ' w-100 overflow-hidden bg-white-light shadow-sm',
      style: 'border-radius: 6px;',
      onchange: 'this.form.submit()'
    }
  %>
<% end %>

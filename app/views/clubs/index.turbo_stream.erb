<%= turbo_stream.append "clubs" do %>
  <%= render partial: "clubs/club", collection: @clubs %>
  <%# <%= render partial: 'clubs/ad' %>
<% end %>


<% if @pagy.next.present? %>
  <%= turbo_stream.replace "pagination" do %>
    <%= turbo_frame_tag "pagination", src: clubs_path(page: @pagy.next, format: :turbo_stream), loading: :lazy %>
  <% end %>
<% end %>

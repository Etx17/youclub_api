<div class="container-fluid">
    <!-- Row for your content -->
    <div class="row">

      <div class="d-none d-sm-block col-sm-2 col-md-3 col-xl-3  ">
          <!-- Content for left side column -->
      </div>

      <!-- Main Container -->
      <div class="col-12 col-sm-8 col-md-6 col-xl-6">

        <div class="d-flex flex-column justify-content-start shadow bg-white " style="border-radius: 15px;">

         <div class="position-relative" style="display: block;"> <!-- Positioning context for the button -->
            <%= image_tag "https://source.unsplash.com/random/?horse/300/200", class: "img-fluid w-100", style: "object-fit: cover; aspect-ratio: 1 / 1; overflow: hidden; ", loading: 'lazy' %>

            <div class="d-flex justify-content-end align-items-center text-light w-100 px-2" style="position: absolute; bottom: 10px; "> <!-- Positioning the button relative to the image -->
                <div class="btn py-2 px-4 gradient-button d-flex align-items-center gap-2" style="border-radius: 8px">
                    <i class="fas fa-edit "></i>
                    <span class=""> S'inscrire</span>
                </div>
            </div>
        </div>
        <%= @club.name.length > 12 ?
            content_tag(:h1, @club.name, class: 'gradient-text px-2') :
            content_tag(:h1, @club.name, class: 'gradient-title px-2')
        %>

        <div class="d-flex flex-wrap gap-2 p-2 pb-3 border-bottom">
          <% @club.activities.each do |activity| %>
            <%= link_to activity_path(activity), class: "flex-grow-1 btn bg-light-white" do %>
              <span class="gradient-text" style="font-size: 2em" ><%= activity.name %><i class=" px-3 fas fa-chevron-right" style="color: #EEEEEE; font-size: 0.8em;"></i></span>

            <% end %>
          <% end %>
        </div>

        <div class="px-3 my-3">
          <%= link_to "https://www.google.fr/maps/place/#{@club.address.gsub(' ', '+')},+#{@club.actual_zipcode}", target: "_blank", class:"text-secondary text-decoration-none nav-link" do %>
            <i class="fas fa-map-marker-alt"></i> <%= @club.address %>
          <% end %>
          <p class="mt-3 text-dark"><%= @club.objet %> </p>

          <%# Adhérence: <%= @club.adherence %>
            <div class="d-flex flex-column align-items-center bg-light-white ">
              <small class="text-secondary">Frais d'adhérence</small>
              <div class="gradient-text text-large" style="font-size: 2em">30€<div>
            </div>
        </div>
      </div>


      </div>

      <div class="d-none d-sm-block col-sm-2 col-md-3 col-xl-3 ">
          <!-- Content for right side column -->
      </div>

    </div>
</div>

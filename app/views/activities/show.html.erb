<% content_for :title, "Youclub: #{@activity.name}" %>
<div class="container-fluid">
    <!-- Row for your content -->
    <div class="row">

      <div class="d-none d-sm-block col-sm-2 col-md-3 col-xl-3  ">
          <!-- Content for left side column -->
      </div>

      <!-- Main Container -->
      <div class="col-12 col-sm-8 col-md-6 col-xl-6">

        <div class="d-flex flex-column justify-content-start shadow bg-white " style="border-radius: 15px;">

          <% if @activity.photos.attached? %>
          <%= image_tag(cl_image_path(@activity.photos.first.key), class: "img-fluid w-100", style: "object-fit: cover; aspect-ratio: 1 / 1; overflow: hidden; ", loading: 'lazy') %>
          <% else %>
          <%= image_tag "https://source.unsplash.com/random/?horse/300/200", class: "img-fluid w-100", style: "object-fit: cover; aspect-ratio: 1 / 1; overflow: hidden; ", loading: 'lazy' %>
          <% end %>
          <div class="d-flex justify-content-between align-items-center text-light w-100 px-2">
            <h1 class="gradient-title" style="max-width: 74%;"><%= @activity.name %></h1>
            <% if current_user && @activity.club.user == current_user %>
              <%= link_to edit_activity_path(@activity) do %>
                <div class="btn py-2 px-4 btn-dark d-flex align-items-center gap-2" style="border-radius: 4px">
                  <i class="fas fa-edit "></i>
                  <span class=""> Modifier</span>
                </div>
                <% end %>
            <% else %>
            <div class="btn py-2 px-4 gradient-button d-flex align-items-center gap-2" style="border-radius: 8px">
              <i class="fas fa-edit "></i>
              <span class=""> S'inscrire</span>
            </div>
            <% end %>
          </div>
          <div class="px-3">Propos√© par <%= link_to @activity.club.name, club_path(@activity.club), class:"text-decoration-none" %></div>

          <div class="d-flex flex-wrap gap-2 p-2 pb-3 border-bottom">
            <% @activity.sub_groups.each do |sub_group| %>
              <div class="btn bg-light-white border" style="border-radius: 8px;"><span class="gradient-text text-large" ><%= sub_group.name %></span></div>
            <% end %>
            <% if current_user && current_user.owns?(@activity.club.id) %>
              <%= link_to new_activity_sub_group_path(@activity), class: "btn btn-dark rounded" do %>
                <i class="fas fa-plus"></i>Ajouter un sous-groupe
              <% end %>
            <% end %>
          </div>


          <p class="px-2 mt-3 text-dark"><%= @activity.full_description %> </p>


          <% @activity.sub_groups.each do |sub_group| %>
            <%= render "sub_groups/sub_group" ,locals: { sub_group: sub_group } %>
          <% end %>
          <%# Sous groupes cartes (partiale, du modele sous groupe) %>
        </div>


      </div>

      <div class="d-none d-sm-block col-sm-2 col-md-3 col-xl-3 ">
          <!-- Content for right side column -->
      </div>

    </div>
</div>

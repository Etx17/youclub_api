<h1>New Claim</h1>
<div class="row d-flex justify-content-center">
<div class="col-10 col-md-6 col-md-offset-3">
  <%= simple_form_for @claim do |f| %>
    <%= f.input :full_name, required: true %>
    <%= f.input :contact_email, as: :email, required: true %>
    <%= f.input :phone_number, as: :string, required: true %>

    <%= f.input :verification_document, as: :file %>

    <%= f.input :club_id, as: :hidden, input_html: { value: params[:club_id] } %>
    <%= f.input :user_id, as: :hidden, input_html: { value: current_user.id } %>

    <%# Data certification input checkbox. %>
    <%= f.button :submit, 'Submit Claim' %>
  <% end %>
  </div>
</div>

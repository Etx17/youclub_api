<div class="row justify-content-center">
  <div class="col-10 col-md-6 p-3">
<%= simple_form_for([@activity, @sub_group, @schedule]) do |f| %>
  <!-- Example fields for the Schedule -->
  <%= f.input :day, label: "Jour" %> <!-- Adjust the fields according to your Schedule model -->

  <h3>Créneaux Horaires</h3>
  <%= f.simple_fields_for :time_slots do |time_slot_form| %>
    <div class="time-slot-fields border p-2 mb-2">
      <%= time_slot_form.input :start_time, as: :time, label: "Heure de début", ignore_date: true %>
      <%= time_slot_form.input :end_time, as: :time, label: "Heure de fin", ignore_date: true %>
    </div>
  <% end %>


  <%= f.button :submit, "Enregistrer les Changements", class: "btn btn-primary mt-3" %>
<% end %>
</div>
</div>
